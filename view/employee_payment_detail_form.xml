<?xml version="1.0"?>
<form string="Payment Detail" col="6">
    <label name="payment_mode"/>
    <field name="payment_mode"/>
    <label name="payment_date"/>
    <field name="payment_date"/>
    <label name="active"/>
    <field name="active"/>
    <group string="Bank Details" colspan="3" id="bank_details">
        <label name="bank_code"/>
        <field name="bank_code"/>
        <label name="bank_branch_code"/>
        <field name="bank_branch_code"/>
        <label name="bank_account_name"/>
        <field name="bank_account_name"/>
        <label name="payable_at_name"/>
        <field name="payable_at_name"/>
    </group>
    <group string="Payment Return Details" colspan="3" yfill="1" id="return_details">
        <label name="return_date"/>
        <field name="return_date"/>
        <label name="return_reason"/>
        <field name="return_reason"/>
    </group>
</form>
