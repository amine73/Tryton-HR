<?xml version="1.0"?>
<form string="Promotion / Tranfer Proposal">
    <label name="proposed_company"/>
    <field name="proposed_company"/>
    <label name="proposed_department"/>
    <field name="proposed_department"/>
    <label name="proposed_allowance"/>
    <field name="proposed_allowance"/>
    <label name="proposed_doj"/>
    <field name="proposed_doj"/>
    <label name="employee"/>
    <field name="employee"/>
    <newline/>
    <field name="remarks"/>
        <group id="proposal_buttons" colspan="4">
            <button string="Submit" icon="tryton-executable" name="review"/>
            <button string="Approve" icon="tryton-ok" name="approve"/>
            <button string="Reject" icon="tryton-cancel" name="reject"/>
        </group>
    <label name="state"/>
    <field name="state" colspan="3"/>
</form>
