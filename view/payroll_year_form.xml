<form string="Payroll Year">
    <label name="name"/>
    <field name="name"/>
    <label name="company"/>
    <field name="company"/>
    <label name="department"/>
    <field name="department"/>
    <label name="start_date"/>
    <field name="start_date"/>
    <label name="end_date"/>
    <field name="end_date"/>
    <notebook colspan="4">
        <page string="Periods" id="periods">
            <group colspan="4" id="buttons">
                <button string="Create Monthly Periods" name="create_period"/>
            </group>
        </page>
    </notebook>
    <group colspan="4" id="buttons">
        <button string="Close Payroll Year" icon="tryton-readonly" confirm="Are you sure to close payroll year?" name="close"/>
        <button string="Re-Open Payroll Year" icon="tryton-clear" name="reopen"/>
    </group>
    <label name="state"/>
    <field name="state" colspan="3"/>
</form>
